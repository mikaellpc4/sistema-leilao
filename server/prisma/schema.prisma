// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  USER
  ADMIN
}

model Users {
  id       String @id
  name     String
  email    String @unique
  password String

  role          Roles
  refreshTokens String[]
}

model Tags {
  id            String @id
  name          String
  thumbnailLink String

  Auctions Auctions[]
}

model Auctions {
  id          String @id
  imageLink   String
  description String

  minimumBid Int
  createdAt  String
  endAt      String

  tag   Tags   @relation(fields: [tagId], references: [id])
  tagId String
}
