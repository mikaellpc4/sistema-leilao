// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  USER
  ADMIN
}

model Users {
  id       String @id
  name     String
  email    String
  password String

  role          Roles
  refreshTokens RefreshTokens[]
}

model Tags {
  id            String @id
  name          String
  thumbnailLink String

  Auctions Auctions[]
}

model Auctions {
  id          String @id
  imageLink   String
  description String

  minimumBid Int
  createdAt  String
  endAt      String

  tag   Tags   @relation(fields: [tagId], references: [id])
  tagId String
}

model RefreshTokens {
  id        String  @id
  createdAt Int
  expiresIn Int

  User     Users  @relation(fields: [userId], references: [id])
  userId   String
}
